{
  "compilerOptions": {
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "baseUrl": ".",
    "module": "es2022",
    "moduleResolution": "node",
    "paths": {
      "~/*": ["./src/*"]
    },
    "resolveJsonModule": true,
    "types": ["vite/client", "node", "react", "react-dom"],
    "allowJs": true,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
