{
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["dom", "esnext"],
    "baseUrl": ".",
    "module": "es2022",
    "moduleResolution": "Bundler",
    "paths": {
      "~/*": ["./app/*"]
    },
    "resolveJsonModule": true,
    "types": ["vite/client", "node"],
    "allowJs": true,
    "noUnusedLocals": true,
    "downlevelIteration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  }
}
